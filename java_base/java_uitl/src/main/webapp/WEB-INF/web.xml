<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>

    <display-name>Archetype Created Web Application</display-name>

    <!-- 注意 servlet 一定要在前面，servlet-mapping要放在后面，不然会报错。 -->
    <servlet>
        <servlet-name>demo</servlet-name>
        <servlet-class>com.servlet01.demo01</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>well</servlet-name>
        <servlet-class>com.servlet01.WelcomServlet</servlet-class>
        <!-- 给定初始化参数 -->
        <init-param>
            <param-name>greeting</param-name>
            <param-value>Welcome you</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>OutputInfoServlet</servlet-name>
        <servlet-class>com.servlet01.OutputInfoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.servlet01.LoginServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>counterServlet</servlet-name>
        <servlet-class>com.servlet01.CounterServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>PortalServlet</servlet-name>
        <servlet-class>com.servlet01.PortalServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Login2Svlet</servlet-name>
        <servlet-class>com.servlet01.LoginServlet2</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>uploadFile</servlet-name>
        <servlet-class>com.fileUpload.txtUpload</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>loginserver</servlet-name>
        <servlet-class>com.servlet01.ch05.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loginchkServlet</servlet-name>
        <servlet-class>com.servlet01.ch05.LoginChkServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>greetServlet</servlet-name>
        <servlet-class>com.servlet01.ch05.GreetServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logoutservlet</servlet-name>
        <servlet-class>com.servlet01.ch05.LogoutServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>demo</servlet-name>
        <url-pattern>/welcome</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>well</servlet-name>
        <url-pattern>/wel</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>OutputInfoServlet</servlet-name>
        <url-pattern>/info</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>counterServlet</servlet-name>
        <url-pattern>/counter</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>PortalServlet</servlet-name>
        <url-pattern>/portal</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Login2Svlet</servlet-name>
        <url-pattern>/login2</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>uploadFile</servlet-name>
        <url-pattern>/uploadFile01</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name> loginserver</servlet-name>
        <url-pattern>/login10</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name> loginchkServlet</servlet-name>
        <url-pattern>/loginchk</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>greetServlet</servlet-name>
        <url-pattern>/greet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logoutservlet</servlet-name>
        <url-pattern>/logout10</url-pattern>
    </servlet-mapping>


    <session-config>
        <session-timeout>5</session-timeout>
    </session-config>
</web-app>
